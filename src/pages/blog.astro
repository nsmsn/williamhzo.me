---
import BaseLayout from '../layouts/BaseLayout.astro';

const posts = await Astro.glob('../pages/posts/*.md');
const title = 'blog';
---

<BaseLayout title={title}>
  <main>
    <h1>{title}</h1>
    <p>blog page</p>

    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
  </main>
</BaseLayout>
